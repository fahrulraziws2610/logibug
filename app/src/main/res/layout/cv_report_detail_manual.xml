<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="10dp"
        card_view:cardCornerRadius="10dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15sp">

            <TextView
                android:id="@+id/tv_version_report_detail_manual"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/corner_radius_yellow"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center_vertical|center"
                android:text="V"
                android:textColor="@color/black"
                android:textSize="16sp"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_apk_name_report_detail_manual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Logibug"
                android:textColor="@color/black"
                android:textSize="8sp"
                card_view:layout_constraintStart_toEndOf="@+id/tv_version_report_detail_manual"
                card_view:layout_constraintTop_toTopOf="@+id/tv_version_report_detail_manual" />

            <TextView
                android:id="@+id/tv_type_test_report_detail_manual"
                android:layout_width="27dp"
                android:layout_height="10dp"
                android:background="@drawable/corner_radius_white"
                android:fontFamily="@font/montserrat_medium"
                android:padding="2dp"
                android:text="Manual"
                android:layout_marginStart="5dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="4sp"
                card_view:layout_constraintBottom_toBottomOf="@+id/tv_apk_name_report_detail_manual"
                card_view:layout_constraintStart_toEndOf="@+id/tv_apk_name_report_detail_manual"
                card_view:layout_constraintTop_toTopOf="@+id/tv_apk_name_report_detail_manual" />


            <TextView
                android:id="@+id/tv_name_testing_report_detail_manual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Testing version 1"
                android:textColor="@color/black"
                android:textSize="16sp"
                card_view:layout_constraintStart_toStartOf="@+id/tv_apk_name_report_detail_manual"
                card_view:layout_constraintTop_toBottomOf="@+id/tv_apk_name_report_detail_manual" />


            <TextView
                android:id="@+id/tv_test_case_report_detail_manual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Test Case"
                android:textColor="@color/black"
                android:textSize="12sp"
                card_view:layout_constraintStart_toStartOf="@+id/progress_indicator_level"
                card_view:layout_constraintTop_toBottomOf="@+id/progress_indicator_level" />

            <TextView
                android:id="@+id/tv_amount_test_case_report_detail_manual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="10"
                android:textColor="@color/black"
                android:textSize="12sp"
                card_view:layout_constraintEnd_toEndOf="@+id/progress_indicator_level"
                card_view:layout_constraintTop_toBottomOf="@+id/progress_indicator_level" />

            <ProgressBar
                android:id="@+id/progress_indicator_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:indeterminate="false"
                android:max="100"
                android:progressTint="@color/Primary"
                android:progressDrawable="@drawable/costum_progressbar_level"
                android:progress="0"
                style="?android:attr/progressBarStyleHorizontal"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/tv_name_testing_report_detail_manual" />

            <TextView
                android:id="@+id/tv_amount_indicator_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="70"
                android:textColor="@color/white"
                android:textSize="8dp"
                card_view:layout_constraintBottom_toBottomOf="@+id/progress_indicator_level"
                card_view:layout_constraintEnd_toEndOf="@+id/progress_indicator_level"
                card_view:layout_constraintStart_toStartOf="@+id/progress_indicator_level"
                card_view:layout_constraintTop_toTopOf="@+id/progress_indicator_level" />

            <TextView
                android:id="@+id/tv_amount2_indicator_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="/100"
                android:layout_marginStart="1dp"
                android:textColor="@color/white"
                android:textSize="8dp"
                card_view:layout_constraintStart_toEndOf="@+id/tv_amount_indicator_level"
                card_view:layout_constraintTop_toTopOf="@+id/tv_amount_indicator_level" />


            <TextView
                android:id="@+id/tv_amount_pass_report_detail_manual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/montserrat_medium"
                android:text="37"
                android:textColor="#2BE51A"
                android:textSize="12sp"
                card_view:layout_constraintEnd_toEndOf="@+id/tv_amount_test_case_report_detail_manual"
                card_view:layout_constraintTop_toBottomOf="@+id/tv_amount_test_case_report_detail_manual" />

            <TextView
                android:id="@+id/tv_pass_report_detail_manual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Pass"
                android:textColor="@color/black"
                android:textSize="12sp"
                card_view:layout_constraintStart_toStartOf="@+id/tv_test_case_report_detail_manual"
                card_view:layout_constraintTop_toBottomOf="@+id/tv_test_case_report_detail_manual" />

            <TextView
                android:id="@+id/tv_amount_fail_report_detail_manual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/montserrat_medium"
                android:text="30"
                android:textColor="#FF0000"
                android:textSize="12sp"
                card_view:layout_constraintEnd_toEndOf="@+id/tv_amount_pass_report_detail_manual"
                card_view:layout_constraintTop_toBottomOf="@+id/tv_amount_pass_report_detail_manual" />

            <TextView
                android:id="@+id/tv_fail_report_detail_manual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Fail"
                android:textColor="@color/black"
                android:textSize="12sp"
                card_view:layout_constraintStart_toStartOf="@+id/tv_pass_report_detail_manual"
                card_view:layout_constraintTop_toBottomOf="@+id/tv_pass_report_detail_manual" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>