<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/cardview_dialog"
    android:paddingVertical="30dp"
    tools:context="ui.homepage.DialogDeleteProjectHomepage">

    <ImageView
        android:id="@+id/iv_delete_dialog_inhomepage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="10dp"
        android:src="@drawable/ic_delete_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_description_delete_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:text="Are you sure to delete project"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_delete_dialog_inhomepage"
        app:layout_constraintStart_toStartOf="@+id/iv_delete_dialog_inhomepage"
        app:layout_constraintTop_toBottomOf="@+id/iv_delete_dialog_inhomepage" />

    <TextView
        android:id="@+id/tv_name_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Logibug"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_description_delete_project"
        app:layout_constraintStart_toStartOf="@+id/tv_description_delete_project"
        app:layout_constraintTop_toBottomOf="@+id/tv_description_delete_project" />

    <Button
        android:id="@+id/btn_cancel_alert_dialog_delete_project_homepage"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="93dp"
        android:layout_height="46dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="100dp"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@color/Primary"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_description_delete_project"
        app:layout_constraintTop_toBottomOf="@+id/tv_description_delete_project"
        app:strokeColor="@color/Primary"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/btn_delete_alert_dialog_delete_project_homepage"
        android:layout_width="93dp"
        android:layout_height="36dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/btn_stroke"
        android:text="Delete"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:backgroundTint="@color/Primary"
        app:layout_constraintStart_toStartOf="@+id/tv_description_delete_project"
        app:layout_constraintTop_toBottomOf="@+id/tv_description_delete_project" />

</androidx.constraintlayout.widget.ConstraintLayout>