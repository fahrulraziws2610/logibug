<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/tv_item_scenario_list"
        android:layout_width="60dp"
        android:layout_height="24dp"
        android:background="@drawable/corner_radius_status"
        android:fontFamily="@font/montserrat_medium"
        android:padding="4dp"
        android:text="POST"
        android:layout_marginStart="27dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name_scenario_item_failed_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:textStyle="bold"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintStart_toEndOf="@+id/tv_item_scenario_list"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_scenario_list" />

    <TextView
        android:id="@+id/tv_test_case_item_failed_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:text="Test Case : Users"
        android:textColor="@color/black"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/tv_name_scenario_item_failed_request"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_scenario_item_failed_request" />

    <TextView
        android:id="@+id/tv_network_item_failed_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:text="500 Internet server error"
        android:textColor="#FF0000"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/tv_test_case_item_failed_request"
        app:layout_constraintTop_toBottomOf="@+id/tv_test_case_item_failed_request" />

    <ImageButton
        android:id="@+id/ib_navigate_next_item_failed_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="250dp"
        android:background="@drawable/ic_navigate_nextt"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_scenario_list"
        app:layout_constraintStart_toEndOf="@+id/tv_item_scenario_list"
        app:layout_constraintTop_toTopOf="@+id/tv_item_scenario_list" />

</androidx.constraintlayout.widget.ConstraintLayout>