<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_item_test_case"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    android:layout_gravity="center_horizontal"
    android:backgroundTint="#FFFFFF"
    card_view:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp">

        <ImageView
            android:id="@+id/iv_indicator_vertical_item_test_case"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_indicator_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_description_item_test_case"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="64dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Validate logging into the Application using valid credentials"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/iv_indicator_vertical_item_test_case"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_status_scenario_in_item_test_case"
            android:layout_width="48dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/corner_radius_status"
            android:fontFamily="@font/montserrat_medium"
            android:padding="3dp"
            android:text="Scenario"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="8sp"
            app:layout_constraintTop_toBottomOf="@id/tv_description_item_test_case"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_status_test_in_item_test_case"
            android:layout_width="48dp"
            android:layout_height="16dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/corner_radius_status_fail"
            android:fontFamily="@font/montserrat_medium"
            android:padding="3dp"
            android:text="Category"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="7sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_status_scenario_in_item_test_case"
            app:layout_constraintStart_toEndOf="@+id/tv_status_scenario_in_item_test_case"
            app:layout_constraintTop_toTopOf="@+id/tv_status_scenario_in_item_test_case" />
        <TextView
            android:id="@+id/tv_status_test_in_item_test_case_result"
            android:layout_width="48dp"
            android:layout_height="16dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/corner_radius_status_fail"
            android:fontFamily="@font/montserrat_medium"
            android:padding="3dp"
            android:text="Category"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="7sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_status_test_in_item_test_case"
            app:layout_constraintStart_toEndOf="@+id/tv_status_test_in_item_test_case"
            app:layout_constraintTop_toTopOf="@+id/tv_status_scenario_in_item_test_case" />

        <TextView
            android:id="@+id/tv_status_test_in_item_test_case_severity"
            android:layout_width="48dp"
            android:layout_height="16dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/corner_radius_status_fail"
            android:fontFamily="@font/montserrat_medium"
            android:padding="3dp"
            android:text="Category"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="7sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_status_test_in_item_test_case_result"
            app:layout_constraintStart_toEndOf="@+id/tv_status_test_in_item_test_case_result"
            app:layout_constraintTop_toTopOf="@+id/tv_status_scenario_in_item_test_case" />

        <ImageButton
            android:id="@+id/ib_navigate_opsi_item_test_case"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_nav_in_item_list"
            android:paddingVertical="16dp"
            android:paddingHorizontal="4dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>