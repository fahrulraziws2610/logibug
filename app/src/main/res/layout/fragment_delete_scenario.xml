<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_white"
    android:padding="20dp"
    tools:context=".ui.scenario.delete_scenario.DeleteScenarioFragment">

    <ImageView
        android:id="@+id/iv_dialog_delete_scenario"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="10dp"
        android:src="@drawable/ic_delete_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_description_delete_scenario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_medium"
        android:textAlignment="center"
        android:text="Are you sure to delete Scenario"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_dialog_delete_scenario" />

    <Button
        android:id="@+id/btn_delete_alert_dialog_delete_scenario"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:text="Delete"
        android:textAllCaps="false"
        android:textColor="@color/Primary"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@id/btn_cancel_alert_dialog_delete_scenario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_description_delete_scenario"
        app:strokeColor="@color/Primary" />

    <Button
        android:id="@+id/btn_cancel_alert_dialog_delete_scenario"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:backgroundTint="@color/Primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/btn_delete_alert_dialog_delete_scenario"
        app:layout_constraintTop_toBottomOf="@+id/tv_description_delete_scenario" />

</androidx.constraintlayout.widget.ConstraintLayout>